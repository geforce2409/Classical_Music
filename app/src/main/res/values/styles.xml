<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="sign_in_btn">
        <item name="android:layout_width">333dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/round_btn_ripple</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation">3dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:translationZ">3dp</item>
    </style>

    <style name="profile_btn">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">bottom|center_horizontal</item>
    </style>

    <style name="bottom_icon">
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">@android:color/darker_gray</item>
    </style>

    <style name="feed_item_profile_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:minLines">1</item>
        <item name="android:text">Username</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/feed_item_profile_name</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="btn_theme" parent="btn_ripple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_ripple</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="btn_ripple" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/btn_ripple</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="btn_img" parent="Widget.AppCompat.ActionButton">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="PopupAnimation" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/bottom_up</item>
        <item name="android:windowExitAnimation">@anim/bottom_down</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!--Hint color and label color in FALSE state-->
        <!--<item name="android:textColorHint">@color/Color Name</item>-->

        <!--Label color in TRUE state-->
        <item name="colorAccent">@color/colorAccent</item>

        <!--Bar color FALSE state-->
        <!--<item name="colorControlNormal">@color/Color Name</item>-->

        <!--Bar color TRUE state-->
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="SignInTextInputLayout" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/et_sign_in</item>

        <!--Label color in TRUE state-->
        <item name="colorAccent">@android:color/white</item>

        <!--Bar color FALSE state-->
        <item name="colorControlNormal">@color/et_sign_in</item>

        <!--Bar color TRUE state-->
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="SignInTextInputEditText" parent="TextAppearance.AppCompat">
        <item name="android:ems">10</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/et_sign_in</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.CustomPopupTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.CommentPopupTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="WhiteAccent" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
    </style>

</resources>
